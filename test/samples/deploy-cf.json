{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Sample Deploy Stage",
  "longDescription": "The Delivery Pipeline automates continuous deployment.",
  "type": "object",
  "properties": {
    "api-key": {
      "description": "IBM Cloud API keys contain permissions that grant access to organizations, spaces, and Kubernetes clusters. You can obtain your API key with 'ibmcloud iam api-key-create' or via the console at https://cloud.ibm.com/iam/#/apikeys by clicking **Create API key** (Each API key only can be viewed once).",
      "type": "string"
    },
    "dev-region": {
      "description": "The IBM Cloud region",
      "type": "string"
    },
    {{#isCF}}
    "dev-organization": {
      "description": "The IBM Cloud org",
      "type": "string"
    },
    "dev-space": {
      "description": "The IBM Cloud space",
      "type": "string"
    },
    {{/isCF}}
    {{#isCFEE}}
    "dev-organization": {
      "description": "The IBM Cloud org",
      "type": "string"
    },
    "dev-space": {
      "description": "The IBM Cloud space",
      "type": "string"
    },
    {{/isCFEE}}
    {{#isKube}}
    "image-registry-token": {
      "description": "Container Registry access token. Retrievable via [ibmcloud cr tokens]",
      "type": "string"
    },
    "kube-cluster-name": {
      "description": "Your cluster name. Retrieve it with [ibmcloud cs clusters] or via the console at https://cloud.ibm.com/containers-kubernetes/home/clusters.",
      "type": "string"
    },
    {{/isKube}}
    {{#isVSI}}
    "public-key": {
      "description": "SSH Public Key",
      "type": "string"
    },
    "private-key": {
      "description": "SSH Private Key",
      "type": "password"
    },
    "softlayer-username": {
      "description": "SoftLayer Username",
      "type": "string"
    },
    "softlayer-api-key": {
      "description": "SoftLayer API Key",
      "type": "password"
    },
    "gitlab-username": {
      "description": "GitLab Username",
      "type": "string"
    },
    "gitlab-access-token": {
      "description": "GitLab Access Token",
      "type": "password"
    },
    {{/isVSI}}
    "app-name": {
      "description": "app name",
      "type": "string"
    }
  },
  "required": ["dev-region", {{#isCF}}"dev-organization", "dev-space",{{/isCF}} {{#isCFEE}}"dev-organization", "dev-space",{{/isCFEE}} "app-name"{{#isKube}}, "api-key", "image-registry-token", "image-pull-secret-name", "kube-cluster-name"{{/isKube}}],  "form": [{
    "type": "validator",
    "url": "/devops/setup/bm-helper/helper.html"
  },
  {
    "type": "password",
    "readonly": false,
    "title": "IBM Cloud API Key",
    "key": "api-key"
  },
  {{#isKube}}
  {
    "type": "password",
    "readonly": false,
    "title": "Container Registry access token",
    "key": "image-registry-token"
  },
  {
    "type": "text",
    "readonly": false,
    "title": "Kubernetes Cluster Name",
    "key": "kube-cluster-name"
  },
  {{/isKube}}
  {{#isVSI}}
  {
    "type": "text",
    "readonly": false,
    "title": "SSH Public Key",
    "key": "public-key"
  },
  {
    "type": "password",
    "readonly": false,
    "title": "SSH Private Key",
    "key": "private-key"
  },
  {{/isVSI}}
  {
    "type": "text",
    "readonly": false,
    "title": "App Name",
    "key": "app-name"
  },
  {
    "type": "table",
    {{#isCF}}
    "columnCount": 3,
    "widths": ["28%", "28%", "28%"],
    "items": [
      {
        "type": "label",
        "title": "Region"
      },
      {
        "type": "label",
        "title": "Organization"
      },
      {
        "type": "label",
        "title": "Space"
      },
      {
        "type": "select",
        "key": "dev-region"
      },
      {
        "type": "select",
        "key": "dev-organization"
      },
      {
        "type": "select",
        "key": "dev-space",
        "readonly": false
      }
    ]
    {{/isCF}}
    {{#isCFEE}}
    "columnCount": 3,
    "widths": ["28%", "28%", "28%"],
    "items": [
      {
        "type": "label",
        "title": "Region"
      },
      {
        "type": "label",
        "title": "Organization"
      },
      {
        "type": "label",
        "title": "Space"
      },
      {
        "type": "select",
        "key": "dev-region"
      },
      {
        "type": "select",
        "key": "dev-organization"
      },
      {
        "type": "select",
        "key": "dev-space",
        "readonly": false
      }
    ]
    {{/isCFEE}}
    {{#isKube}}
    "columnCount": 1,
    "widths": ["28%"],
    "items": [
      {
        "type": "label",
        "title": "Region"
      },
      {
        "type": "select",
        "key": "dev-region"
      }
    ]
    {{/isKube}}
    {{#isVSI}}
    "columnCount": 2,
    "widths": ["28%", "28%"],
    "items": [
      {
        "type": "text",
        "key": "softlayer-username"
      },
      {
        "type": "password",
        "key": "softlayer-api-key"
      },
      {
        "type": "label",
        "title": "SoftLayer Username"
      },
      {
        "type": "label",
        "key": "SoftLayer API Key"
      },
      {
        "type": "text",
        "key": "gitlab-username"
      },
      {
        "type": "password",
        "key": "gitlab-access-token"
      },
      {
        "type": "label",
        "title": "GitLab Username"
      },
      {
        "type": "label",
        "key": "GitLab Access Token"
      }
    ]
    {{/isVSI}}
  }]
}
